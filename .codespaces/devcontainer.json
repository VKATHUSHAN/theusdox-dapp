{
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18",
  "hostRequirements": {
    "cpus": 2,
    "memory": "4gb",
    "storage": "32gb"
  },
  "waitFor": "postCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "npm install && echo 'Environment setup complete!'",
  "postAttachCommand": {
    "server": "npm run dev"
  }
}